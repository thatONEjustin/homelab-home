---
// import splt from 'spltjs'
const { item } = Astro.props
const { url:href, icon, color="" } = item.data

const clean_label = (str: string): string => {
  return str.split('/')[1].replaceAll('-', ' ')
}

const label:string = clean_label( item.id )

// splt({
//   reveal: true
// })
---
<li class="flex flex-col items-center justify-center">
  <a class={`Bookmark flex flex-col items-center justify-center max-w-fit w-full ${color}`} {href}>
    <i class={`text-6xl nf ${icon} ${color}`}></i>
    <h2 class={`text-3xl mt-4 text-center`}>{label}</h2> 
  </a>
</li>

<style>
.yellow {
  @apply text-yellow;
}

.purple {
  @apply text-purple;
}

.red {
  @apply text-red;
}

.blue {
    @apply text-blue;
}

.cyan {
  @apply text-cyan;
}

.green {
  @apply text-green;
}

.white {
  @apply text-white;
}

.pink {
  @apply text-pink;
}

.orange {
  @apply text-orange;
}
</style>
